            <field name="name"/>
        </panel>
    </form>

    <grid name="buscar-grupo" title="Grupo" model="com.educaflow.apps.sistemaeducativo.db.Grupo"
          groups="admins,users"
          editable="false" edit-icon="false" x-selector="none" canNew="false" canEdit="false" canDelete="false" canSave="false"
