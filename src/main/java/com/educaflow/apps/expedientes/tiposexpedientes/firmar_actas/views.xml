        <field name="code" width="200px" />
        <field name="name"/>
    </grid>

    <form name="Grupo"  title="Grupo" width="large" model="com.educaflow.apps.sistemaeducativo.db.Grupo" groups="admins,users">
        <panel name="Grupo" title="Grupo">
            <field name="name"/>
        </panel>
    </form>



