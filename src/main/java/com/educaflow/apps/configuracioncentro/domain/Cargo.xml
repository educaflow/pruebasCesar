<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://axelor.com/xml/ns/domain-models https://axelor.com/xml/ns/domain-models/domain-models_7.4.xsd">

    <module name="configuracioncentro" package="com.educaflow.apps.configuracioncentro.db"/>
    <entity name="Cargo" repository="abstract">
        <string name="code"  />
        <string name="name" namecolumn="true" />
        <many-to-one name="centro" ref="com.educaflow.apps.configuracioncentro.db.Centro"/>

        <enum name="tipoUsuario" ref="com.educaflow.apps.configuracioncentro.db.TipoUsuario" title="Tipo de usuario"/>
        <boolean name="adminCentro" title="Administrador del centro" default="false"/>
        <boolean name="directorCentro" title="Director del centro" default="false"/>
        <boolean name="secretarioCentro" title="Secretario del centro" default="false"/>


        <one-to-many name="cursosAcademicoCargos" ref="com.educaflow.apps.configuracioncentro.db.CursoAcademicoCargo" mappedBy="cargo" title="NO"/>
    </entity>

</domain-models>