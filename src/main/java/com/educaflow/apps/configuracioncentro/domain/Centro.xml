<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://axelor.com/xml/ns/domain-models https://axelor.com/xml/ns/domain-models/domain-models_7.4.xsd">

    <module name="configuracioncentro" package="com.educaflow.apps.configuracioncentro.db"/>
    <entity name="Centro">
        <string name="code"  />
        <string name="name" namecolumn="true" />
        <string name="address" title="Dirección"/>
        <string name="city" title="Ciudad"/>
        <string name="postalCode" title="Código Postal"/>
        <string name="country" title="Provincia"/>

        <one-to-one name="cursoAcademicoActual" ref="com.educaflow.apps.configuracioncentro.db.CursoAcademico" title="Curso académico actual"/>

        <one-to-many name="cursosAcademicos" ref="com.educaflow.apps.configuracioncentro.db.CursoAcademico" mappedBy="centro" title="Cursos académicos"/>
        <one-to-many name="grupos" ref="com.educaflow.apps.configuracioncentro.db.Grupo" mappedBy="centro" title="Grupos"/>
        <one-to-many name="departamentos" ref="com.educaflow.apps.configuracioncentro.db.Departamento" mappedBy="centro" title="Departamentos"/>
    </entity>

</domain-models>