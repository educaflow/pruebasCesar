<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.4.xsd">

    <action-view name="mant-Usuario-action" title="Usuarios" model="com.axelor.auth.db.User">
        <view type="grid" name="mant-Usuario-grid"/>
        <view type="form" name="mant-Usuario-form"/>
        <view-param name="forceEdit" value="true"/>
        <view-param name="centroActivo" value="46019660" />
    </action-view>

    <grid name="mant-Usuario-grid" title="Usuario" model="com.axelor.auth.db.User"
          groups="admins,users"
          editable="false" edit-icon="false" x-selector="none" canNew="true" canEdit="false" canDelete="false" canSave="false" canViewOnClick="true"

    >
        <hilite color="danger" if="archived"/>
        <field name="code" width="200px" />
        <field name="name" width="350px"/>
        <!--<field name="tipoUsuarioCentroActivo"/>-->
        <field name="centroUsuario.tipoUsuario" width="200px"/>
        <field name="archived" width="100px" />
    </grid>

    <form name="mant-Usuario-form" title="Usuario" model="com.axelor.auth.db.User"
          groups="admins,users"
          width="large" canAttach="false" canBack="false" canBackOnSave="true" canDelete="true" canNew="false">
        <panel name="Usuario" title="">
            <field name="code" colSpan="3" />
            <field name="name" colOffset="3" />
            <field name="centroUsuario.tipoUsuario" colOffset="6"/>
        </panel>
    </form>

    <grid name="search-Usuario-grid" title="Usuario" model="com.axelor.auth.db.User"
          groups="admins,users"
          orderBy="name"
          editable="false" edit-icon="false" x-selector="none" canNew="false" canEdit="false" canDelete="false" canSave="false" canViewOnClick="true">
        <field name="name" />
    </grid>
</object-views>