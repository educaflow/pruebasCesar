<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.4.xsd">

    <action-view name="mant-Cargo-action" title="Cargos" model="com.educaflow.apps.configuracioncentro.db.Cargo">
        <view type="grid" name="mant-Cargo-grid"/>
        <view type="form" name="mant-Cargo-form"/>
        <view-param name="forceEdit" value="true"/>
    </action-view>

    <grid name="mant-Cargo-grid" title="Cargo" model="com.educaflow.apps.configuracioncentro.db.Cargo"
          groups="admins,users"
          editable="false" edit-icon="false" x-selector="none" canNew="true" canEdit="false" canDelete="false" canSave="false" canViewOnClick="true">
        <hilite color="danger" if="archived"/>
        <!--<field name="code" width="150px" />-->
        <field name="name" />
        <field name="tipoUsuario" width="150px" />
        <field name="adminCentro" width="150px"/>
        <field name="directorCentro" width="150px"/>
        <field name="secretarioCentro" width="150px"/>
        <!--<field name="archived" width="100px" />-->
    </grid>

    <form name="mant-Cargo-form" title="Cargo" model="com.educaflow.apps.configuracioncentro.db.Cargo"
          groups="admins,users"
          width="large" canAttach="false" canBack="false" canBackOnSave="true" canDelete="true" canNew="false">
        <panel name="Cargo" title="">
            <field name="code" colSpan="6" required="true"/>
            <field name="name" colSpan="6" required="true"/>
            <field name="tipoUsuario" colSpan="3" required="true"/>
            <field name="adminCentro"
                   colSpan="3"
                   title="Administrador"
                   showIf="tipoUsuario == 'PROFESOR' || tipoUsuario == 'ADMINISTRATIVO'"
            />
            <field
                    name="directorCentro"
                    colSpan="3"
                    title="Director"
                    showIf="tipoUsuario == 'PROFESOR' || tipoUsuario == 'ADMINISTRATIVO'"
            />
            <field
                    name="secretarioCentro"
                    colSpan="3"
                    title="Secretario"
                    showIf="tipoUsuario == 'PROFESOR' || tipoUsuario == 'ADMINISTRATIVO'"
            />
        </panel>
    </form>

    <grid name="search-Cargo-grid" title="Cargo" model="com.educaflow.apps.configuracioncentro.db.Cargo"
          groups="admins,users"
          orderBy="name"
          editable="false" edit-icon="false" x-selector="none" canNew="false" canEdit="false" canDelete="false" canSave="false" canViewOnClick="true">
        <field name="name" />
    </grid>
</object-views>